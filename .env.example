# Database Configuration
DATABASE_URL=sqlite:///./mcp_auth.db

# Security Configuration
# IMPORTANT: Generate a secure secret key for production
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-min-256-bits-change-in-production

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30
JWT_ALGORITHM=HS256

# TOTP Configuration
TOTP_ISSUER_NAME=MCP Auth Service

# Server Configuration (optional)
HOST=0.0.0.0
PORT=8000

# CORS Configuration (optional)
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
